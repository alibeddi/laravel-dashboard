{
    "version": 2,
    "outputDirectory": "public",
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@0.6.2",
            "includeFiles": [
                "composer.json",
                "composer.lock",
                "vendor/**",
                "bootstrap/**",
                "app/**",
                "routes/**",
                "config/**",
                "public/index.php",
                "resources/views/**",
                "storage/**"
            ]
        }
    },
    "routes": [
        {
            "src": "/build/(.*)",
            "dest": "/build/$1"
        },
        {
            "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico|txt|json|woff2?))",
            "dest": "/$1"
        },
        {
            "src": "/(.*)",
            "dest": "api/index.php"
        }
    ],
    "installCommand": "npm ci",
    "buildCommand": "npm run build"
}